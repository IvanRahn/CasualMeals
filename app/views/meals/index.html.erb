<p id="notice"><%= notice %></p>
<% if current_user.chef? %>
    <%= render 'all_meals'%>
    <% else %>
    <h1> Meals </h1>
<% end%>
<!-- Filter Buttons Start -->
<section class="filter-simple">
    <div class="button-group round">
      <button class="button hollow filter-simple-button is-active" data-filter="all">All</button>
      <button class="button hollow filter-simple-button" data-filter="chinese">Chinese</button>
      <button class="button hollow filter-simple-button" data-filter="french">French</button>
      <button class="button hollow filter-simple-button" data-filter="japanese">Japanese</button>
      <button class="button hollow filter-simple-button" data-filter="vietnamese">Vietnamese</button>
      <button class="button hollow filter-simple-button" data-filter="turkish">Turkish</button>
      <button class="button hollow filter-simple-button" data-filter="american">American</button>
      <button class="button hollow filter-simple-button" data-filter="indian">Indian</button>
      <button class="button hollow filter-simple-button" data-filter="russian">Russian</button>
      <button class="button hollow filter-simple-button" data-filter="others">Others</button>
    </div>
    <% if current_user.customer? or (current_user.chef? and current_page?(show_all_path))%>
<%=render 'search'%>
<%end%>
<% if current_user.chef? %>
<div class="row small-up-2 medium-up-3 large-up-4">
          <%= link_to new_meal_path, class:"card plus-card  column column-block" do %>
            <svg height="40" viewBox="0 0 24 24" width="40" xmlns="http://www.w3.org/2000/svg">
              <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
              <path d="M0 0h24v24H0z" fill="none"/>
            </svg>
            <h4>Add meal</h4>
    <% end %>
</div>
<%end%>

  
  


  <% @meals.each do |meal| %>
    <div class="row small-up-2 medium-up-3 large-up-4 card filter-simple-item <%= meal.cuisine %>">
        <div class="column column-block  ">
          <%= link_to meal, value:"meal.cusine" do %>
          <%#<%= image_tag(meal.image_url)%>
          <h5><%= meal.name %></h5>
          <p>Cuisine: <%= meal.cuisine %>
          <p>Description: <%= meal.description %></p>
          <p>Price: $<%= meal.price %></p>
          <p>Delivery time: <%= meal.delivery_time %></p>
          <p>Chef: <%= meal.chef_name %></p>
          <% end %>
        </div>
    </div>

  <% end %>

</section>
