<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-icons">
    <%= devise_error_messages! %>

    <h4>Register for an account</h4>

    <div class="field input-group">
      <span class="input-group-label">
        <i class="fa fa-user"></i>
      </span>
      <%= f.text_field :first_name, autofocus: true, placeholder: "First Name", class: "input-group-field" %>
    </div>
    
    <div class="field input-group">
      <span class="input-group-label">
        <i class="fa fa-user"></i>
      </span>
      <%= f.text_field :last_name, placeholder: "Last Name", class: "input-group-field" %>
    </div>

    <div class="field input-group">
      <span class="input-group-label">
        <i class="fa fa-phone"></i>
      </span>
        <%= f.telephone_field :phone_number, placeholder: "Phone Number", class: "input-group-field" %>
    </div>

    <div class="field input-group">
      <span class="input-group-label">
        <i class="fa fa-address-card"></i>
      </span>
        <%= f.text_field :address, placeholder: "Address", class: "input-group-field" %>
    </div>

    <div class="field input-group">
      <span class="input-group-label">
        <i class="fa fa-envelope"></i>
      </span>
      <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "input-group-field" %>
    </div>

    <div class="field input-group">
      <% if @minimum_password_length %>
      <%# <em>(<%= @minimum_password_length %> 
      <%# characters minimum)</em> %>
      <% end %><br />
      <span class="input-group-label">
        <i class="fa fa-key"></i>
      </span>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (#{@minimum_password_length} characters minimum)", class: "input-group-field"%>
    </div>

    <div class="field input-group">
      <span class="input-group-label">
        <i class="fa fa-key"></i>
      </span>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation", class: "input-group-field" %>
    </div>

    <div class="field input-group">
      <span class="input-group-label">
        <i class="fa fa-users"></i>
      </span>
        <%= f.select :type_of_user, ['chef', 'customer'], class: 'input-group-field' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign Up" %>
    </div>
  </div>
<% end %>
  
<%= render "devise/shared/links" %>


