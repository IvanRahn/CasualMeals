<form>
<div class="form-icons">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <h4>Register for an account</h4>

  <div class="field input-group">
    <span class="input-group-label">
      <i class="fa fa-user"></i>
    </span>
    <%= f.text_field :first_name, autofocus: true, placeholder: "First Name", class: "input-group-field" %>
  </div>
  
  <div class="field input-group">
    <span class="input-group-label">
      <i class="fa fa-user"></i>
    </span>
    <%= f.text_field :last_name, placeholder: "Last Name", class: "input-group-field" %>
  </div>

  <div class="field input-group">
    <span class="input-group-label">
      <i class="fa fa-phone"></i>
    </span>
      <%= f.telephone_field :phone_number, placeholder: "Phone Number", class: "input-group-field" %>
  </div>

  <div class="field input-group">
    <span class="input-group-label">
      <i class="fa fa-address-card"></i>
    </span>
      <%= f.text_field :address, placeholder: "Address", class: "input-group-field" %>
  </div>

  <div class="field input-group">
    <span class="input-group-label">
      <i class="fa fa-envelope"></i>
    </span>
    <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "input-group-field" %>
  </div>

  <div class="field input-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <span class="input-group-label">
      <i class="fa fa-key"></i>
    </span>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "input-group-field"%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

   <div class="field input-group">
    <span class="input-group-label">
      <i class="fa fa-users"></i>
    </span>
    <%= f.label :are_you_a_chef? %><br />
    <%= f.select :type_of_user, ['chef', 'customer']%>
 </div>

  <div class="actions">
    <%= f.submit "Sign Up" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
<form>

